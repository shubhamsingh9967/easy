package pattern;

public class Pattern1 {

	public static void main(String[] args) {
		int n=7;
		for(int r=1;r<=n;r++) //rows
		{
			for(int c=1;c<=n;c++) //column
			{
				if(r==(n/2)+1 ||r==1||((r<=(n/2)+1)&& c==1)||((r<=(n/2)+1)&& c==n)||(r>=(n/2)+1 &&c==(n/2)+1)) {
					System.out.print("* ");
				}else {
					System.out.print("  ");
				}
			}
			System.out.println();
		}

	}

}
