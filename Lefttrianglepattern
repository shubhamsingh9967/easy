package pattern;

public class Pattern1 {

	public static void main(String[] args) {
		int n=7;
		for(int r=1;r<=n;r++) //rows
		{
			for(int c=1;c<=n;c++) //column
			{
				if(c<=r) {
					System.out.print("* ");
				}else {
					System.out.print("  ");
				}
			}
			System.out.println();
		}

	}

}
